{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES6",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "allowJs": true,
    "noLib": false,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "incremental": false,
    "outDir": "./dist",
    "baseUrl": "./src",
    "rootDir": "./src"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "src/external/**/*",
    "node_modules",
    "**/*.spec.ts",
    ".temp"
  ],
  "ts-node": {
    "swc": true,
    "transpileOnly": true
  }
}